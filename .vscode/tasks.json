{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"get_next_line_utils.c"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build"
			},
			"detail": "Task generated by Debugger."
		},
		{
			"type": "cppbuild",
			"label": "C/C++: cc build active file",
			"command": "/usr/bin/cc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"get_next_line.c",
				"get_next_line_utils.c",
				"get_next_line.h"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Riccardo."
		}
	]
}